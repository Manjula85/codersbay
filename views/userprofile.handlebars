<section class="profile">
  <div class="page-title">
    <h1>Profile</h1>
  </div>
  <h3>{{role}}</h3>
  <div class="user-bio">
    {{#if image}}
    <img src="{{image}}" alt='withImage' class="profile-card-img headlinePost-title">
    {{else}}
    <img src="img/no_image.png" alt='noImage' class="profile-card-img headlinePost-title">
    {{/if}}
  </div>
    <div class="user-about">
      <p>First Name: {{first_name}}</p>
      <p>Last Name: {{last_name}}</p>
      <p>Email: {{email}}</p>
      <p>Username : {{knowledgeable_in}}</p>
    </div>
  </div>

</section>
<section>

  <form class="post-form">
    <div class="form-group">
      <label for="post-title"></label>
      <input class="form-control" type="text" id="post-title" name="post-title" placeholder="Post Title" />
    </div>
    <div class="form-group">
      <label for="content"></label>
      <input class="form-control" id="content" name="content" placeholder="Content" />
    </div>
    <div class="form-group">
      <label for="post-type"></label>
      <select name='type' id="type" class="form-control">
        <option value="" disabled selected>Post to</option>
        <option value='forum'>Forum</option>
        <option value='bounty'>Bounty</option>
        <option value='codingbuddies'>Coding Buddies</option>
      </select>
    </div>
    <div class="form-group">
      <label for="skills"></label>
      <input class="form-control" id="skills" name="skills" placeholder="Skills" />
    </div>

    <button type="submit" class="btn btn-dark btn-lg">Create Post</button>
  </form>
</section>


{{#if posts.length}}
<section>
  <div class="page-title">
    <h2>My Posts</h2>
  </div>

  <ul>
    {{#each posts as |post|}}
    <li>
      {{> forum-info post}}
    </li>
    <div class="edit-post-btn">
      <a href="/userprofile/edit/{{post.id}}" class="edit-link btn btn-warning">Edit post</a>
    </div>

    {{> comment-info post.comments}}

    <br>
    <hr>
    {{!-- Comment: This is for the post --}}
    {{/each}}
  </ul>
</section>
{{/if}}


<script src="/javascript/add-post.js"></script>