<form class="login-form">
    <div>
        <label for="email-login">Email:</label>
        <input type="text" id="email-login" />
    </div>
    <div>
        <label for="password-login">Password:</label>
        <input type="password" id="password-login" />
    </div>
    <div>
        <button type="submit">Login</button>
    </div>
</form>


<form class="register-form">
    <div>
        <label for="role-register">First name:</label>
        <select name='role' id="role-register">
            <option value='user'>User</option>
            <option value='coach'>Coach</option>
        </select>
    </div>
    <div>
        <label for="first-name-register">First name:</label>
        <input type="text" id="first-name-register" />
    </div>
    <div>
        <label for="last-name-register">Last name:</label>
        <input type="text" id="last-name-register" />
    </div>
    <div>
        <label for="email-register">Email:</label>
        <input type="text" id="email-register" />
    </div>
    <div>
        <label for="password-register">Password:</label>
        <input type="password" id="password-register" />
    </div>
    <div>
        <label for="knowledge-register">What coding languages do you know?:</label>
        <input type="text" id="knowledge-register" />
    </div>
