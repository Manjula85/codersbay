{{#each posts as |post|}}
<article>
    <hr>
    <div class="title">
        <h3>{{post.title}}</h3>
    </div>
    <div>
        {{post.content}}
    
    <span> -- {{post.comments.length}} comment(s)</span>
    </div>
    <br>
    <button type='button'>Comment</button>
    <hr>
</article>

<div class="comments">
  {{#each post.comments as |comment|}}
  <section class="comment" style="border: 1px solid black; padding:5px">
    <div class="meta" style="text-decoration: underline">
      {{comment.user.first_name}} on {{comment.created_at}}
    </div>
    <div class="text" style="font-size: larger;">
      {{comment.comment_text}}
    </div>
  </section>
  {{/each}}
</div>
 {{/each}}