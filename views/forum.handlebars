<div class="dropdown" style="padding-top: 5%; margin-bottom: 3%">
  <button type="button" class="btn btn-primary dropdown-toggle" data-toggle="dropdown">
    Dropdown button
  </button>
  <div class="dropdown-menu">
    <a class="dropdown-item" onClick=test({{skills}})>Link 1</a>
    <a class="dropdown-item" href="#">Link 2</a>
    <a class="dropdown-item" href="#">Link 3</a>
  </div>
</div>
<br>
<br>
<table id='top'>
<tr>
  <td style="width: 85%;">
{{#each posts as |post|}}
<li>
  {{> forum-info post}}
</li>

{{> comment-info post.comments}}

<br><hr>
{{!-- Comment: This is for the post --}}
{{/each}}

</td>
<td style="border-left-style: solid;">
  <section class="headlinePosts">
  {{#each posts as |post|}}
  <a href="#{{post.id}}">
  <div class="headlinePost-title" style="height: 100px; border:1px black solid; ">
  <h4>{{post.title}}</h4>
  </div>
  </a>
  {{/each}}
  </section>

  {{!-- Relative button to go to top --}}
  <a href="#top">
  <div class="headlineBackTop">
    <h4>Back to the top!</h4>
  </div>
  </a>

</td>
</tr>
</table>

